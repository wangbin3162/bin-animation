@import "common.styl"

.animation-demo {
  .ctrl {
    padding-bottom: 20px;
  }
  .animation-box {
    width: 100%;
    height: 100px;
    .transition-box {
      width: 60px;
      height: 60px;
      border-radius: 4px;
      background-color: #409eff;
      text-align: center;
      color: #fff;
      line-height: 60px;
      box-sizing: border-box;
      font-size: 16px;
    }
  }
}

.modal-demo .animation-box {
  position: relative;
  .mini-btn-box {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    border: 1px solid #eee;
    z-index: 10;
    .click-me {
      width: 40px;
      height: 40px;
      border: 1px solid #60b8f6;
      cursor: pointer;
      img {
        width: 100%;
        height: 100%;
      }
    }
    &.v-enter-active, &.v-leave-active {
      transition: all 0.4s
    }
    &.v-enter, &.v-leave-to {
      transform: translate3d(0, -40px, 0)
      opacity: 0
    }
  }
  .modal-box {
    position: absolute;
    z-index: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%
    height: 100%
    .inner {
      width: 300px;
      height: 300px;
      background: #eee;
      border-radius: 15px;
      font-size: 20px;
      text-align: center;
      line-height: 300px;
    }
  }
}

